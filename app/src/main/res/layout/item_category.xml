<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    style="@style/PremoCard"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="@dimen/card_elevation"
    card_view:cardCornerRadius="@dimen/card_corner_radius"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:background="?android:selectableItemBackground"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/base_margin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/category_item_height">

        <ImageView
            android:id="@+id/category_icon"
            android:gravity="center_vertical"
            android:tint="@color/primary"
            tools:src="@drawable/ic_action_search"
            android:layout_gravity="center_vertical"
            android:layout_alignParentLeft="true"
            android:layout_width="@dimen/card_button_size"
            android:layout_height="@dimen/card_button_size"
            android:contentDescription="@string/category_icon"/>

        <TextView
            tools:text="Technology"
            android:id="@+id/category_text"
            android:gravity="center_vertical"
            android:textSize="@dimen/medium_text_size"
            android:layout_gravity="center_vertical"
            android:layout_toRightOf="@+id/category_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>
